<body>
    <script>
        function check() {
            let lg = document.getElementById('customName').value;
            let msg = document.getElementById('message');
            if (lg.length == 10) {
                msg.style.color = 'red';
                msg.innerHTML = 'You can give custom names only up to 10 characters';
            } else msg.innerHTML = '';
        }
    </script>

    <div id="navbar">
        <header class="bg-dark-blue">
            <div class="container">
                <nav id="navbar">
                    <a href="/index" id="xper-heading" style="font-size: 2em; font-style: italic;"> xper</a>
                    <ul>
                        <li><a href="#" style="margin-left: 4em;">Why xper?</a></li>
                        <li><a href="/index" style="margin-left: 1em;"> Services</a></li>
                        <li><a href="#footer" style="margin-left: 1em;"> Contact</a></li>
                        <li><a href="/chart" style="margin-left: 1em;"> Stats</a></li>
                        <li><a href="#footer"
                                style="margin-left: 1em; background-color: #207dae; border-radius: 4px;">Help</a></li>
                    </ul>
                </nav>
            </div>
        </header>
    </div>
    <br><br>
    <div class="container col-lg-6">
        <h1 style="text-align:center;">URL Shortener Service</h1>
        <div class="row justify-content-center">
            <form id="form" onkeyup="check()" action="/shortUrls" method="POST" class="my-4 form-inline">
                <label for="fullUrl" class="sr-only">URL</label>
                <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl"
                    class="form-control col-12 mr-2 mb-4">
                <label for="customName" class="sr-only">Name</label>
                <input placeholder="Name" type="text" name="customName" id="customName" class="form-control col-12 mr-2"
                    maxlength="10">
                <small class="form-text text-muted mb-4">You can give a custom name of up to 10 characters to the
                    URL you
                    are shortening.
                </small>
                <span id="message" class=""></span>

                <div style="display: flex; flex-direction:column;" class="row justify-content-center">
                    <div style="display: flex; flex-direction: row;" class="row justify-content-center">
                        <label for="expireTime" style="margin-left: 2em;">Select the last expiration time of the
                            shortened
                            URL:</label> <br>
                        <div class="row"><input required type="time" name="expireTime" id="expireTime"
                                style="margin-right: 5em; margin-left: 6.8em; size: 4.5em !important;"
                                class="col-lg-12"></div>
                    </div>
                    <br>
                    <button class="btn btn-success" type="submit" id="submitBtn" style="margin-left: 6em; align-self: center; background-color:#207dae !important; padding: 0.8em;
                        padding-left: 5em; padding-right: 5em; font-size: 1em;">
                        Shorten
                    </button>
                </div>
            </form>
        </div>
    </div>
    <br><br>

    <!--<div class="col-lg-12">-->
    <div class="table-responsive">
        <table class="table table-striped" id="link-names">
            <thead>
                <tr>
                    <th>Shortened URL Name</th>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                    <th>Created Date</th>
                    <th>Expire Date</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=> { %>
                    <tr>
                        <td>
                            <%= shortUrl.name%>
                        </td>
                        <td><a target="_blank" href="<%= shortUrl.full %>">
                                <%=shortUrl.full%>
                            </a></td>
                        <td><a target="_blank" href="<%= shortUrl.short %>">
                                <%= shortUrl.short %>
                            </a></td>
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                        <td>
                            <%=shortUrl.createdDate.toLocaleString() %>
                        </td>
                        <td>
                            <%=shortUrl.expireTime.toLocaleString() %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

